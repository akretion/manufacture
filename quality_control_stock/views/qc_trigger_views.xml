<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form view -->
    <record id="qc_trigger_form_view" model="ir.ui.view">
      <field name="name">qc.trigger.form (in quality_control_stock)</field>
      <field name="model">qc.trigger</field>
      <field name="inherit_id" ref="quality_control.qc_trigger_form_view"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_selectable']" position="after">
              <field name="picking_type_id" attrs="{'invisible': [('picking_type_id', '=', False)]}"/>
          </xpath>
      </field>
    </record>
</odoo>

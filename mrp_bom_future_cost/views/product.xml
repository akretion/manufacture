<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="product_product_form_view_bom_button" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp.product_product_form_view_bom_button"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="future" string="Future" groups="mrp.group_mrp_user">
                     <group name="future_cost" string="Future Cost">
                        <field name="future_cost"/>
                        <field name="last_cost"/>
                        <field name="previous_cost"/>
                        <field name="vendor_price_id"/>
                        <field name="vendor_price_info"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="future_cost" string="FC"/>
                <field name="last_cost" string="Last FC"/>
                <field name="previous_cost"/>
            </field>
        </field>
    </record>

    <record id="product_search_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="before">
                <filter name="future_cost" string="Future Costs" domain="[('future_cost','&gt;',0)]"/>
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="switch_raw_material_wizard_view" model="ir.ui.view">
            <field name="name">raw.material.swap.form</field>
            <field name="model">raw.material.swap</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="product_id" string="origin product" />
                            <field
              name="product_replacement_id"
              string="product replacement"
            />
                            <field name="production_ids" />
                        </group>
                    </group>
                    <footer>
                        <button
            name="switch_product"
            string="Switch"
            type="object"
            class="oe_highlight"
          />
                        <button
            special="cancel"
            string="Close window"
            type="object"
            icon="gtk-cancel"
          />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wiz_raw_material_swap" model="ir.actions.act_window">
            <field name="name">Raw Material Swap</field>
            <field name="res_model">raw.material.swap</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="switch_raw_material_wizard_view" />
            <field name="target">new</field>
            <field
      name="groups_id"
      eval="[(4, ref('mrp.group_mrp_manager'))]"
    />
            <field name="binding_model_id" ref="mrp.model_mrp_production" />
        </record>

</odoo>

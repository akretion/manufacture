<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="mrp_workcenter_view" model="ir.ui.view">
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
        <field name="arch" type="xml">
            <field name="pending_order_ids" position="before">
                    <button
                    name="button_order_workorder"
                    type="object"
                    string="Scheduling"
                />
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Ordering">
                    <group>
                        <field name="ordering_key_id" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="mrp_workcenter_tree_view" model="ir.ui.view">
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view" />
        <field name="arch" type="xml">
            <tree position="inside">
                <header>
                    <button
                        name="button_order_workorder"
                        type="object"
                        string="Scheduling"
                    />
                 </header>
             </tree>
        </field>
    </record>

</odoo>
